{
  "mcpServers": {
    "booking-server": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name",
        "mcp-booking-server",
        "-e",
        "NODE_ENV=production",
        "-e",
        "MCP_SERVER_NAME=booking-server",
        "-e",
        "MCP_SERVER_VERSION=1.0.0",
        "-e",
        "PORT=3001",
        "-e",
        "LOG_LEVEL=info",
        "-e",
        "BOOKING_BASE_URL=https://www.booking.com",
        "-e",
        "BOOKING_LANGUAGE=pt-br",
        "-e",
        "BOOKING_CURRENCY=BRL",
        "ghcr.io/brunovlucena/mcp-booking-server:latest"
      ]
    }
  }
}
