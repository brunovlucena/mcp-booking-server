# üè® MCP Booking Server - Task Configuration
# Configura√ß√£o do Task baseada no padr√£o Docker MCP Registry

# Configura√ß√µes globais
output: prefixed
color: true
summary: true

# Configura√ß√µes de vari√°veis
vars:
  IMAGE_NAME: mcp-booking-server
  TAG: latest
  DEV_TAG: dev
  PORT: 3001
  CONTAINER_NAME: mcp-booking-server
  DEV_CONTAINER_NAME: mcp-booking-dev
  BOOKING_BASE_URL: https://www.booking.com
  BOOKING_LANGUAGE: pt-br
  BOOKING_CURRENCY: BRL

# Configura√ß√µes de output
output_mode: prefixed
output_group: true
output_group_begin: "üè®"
output_group_end: "‚úÖ"

# Configura√ß√µes de erro
stop_on_error: true
error_on_failure: true

# Configura√ß√µes de paraleliza√ß√£o
concurrent: true
max_concurrent: 4

# Configura√ß√µes de cache
cache: true
cache_dir: .task-cache

# Configura√ß√µes de watch
watch: true
watch_interval: 1s

# Configura√ß√µes de log
log_level: info
log_format: json

# Configura√ß√µes de timeout
timeout: 300s

# Configura√ß√µes de retry
retry: 3
retry_interval: 5s
